{
  "version": 2,
  "crons": [
    {
      "path": "/api/cron/collect-events",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/collect-events-deep",
      "schedule": "0 3 * * 0"
    },
    {
      "path": "/api/cron/precompute-intelligence",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/keep-warm",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/pre-warm-cache",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/discover-opportunities-hourly",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/discover-opportunities-daily",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/discover-opportunities-weekly",
      "schedule": "0 5 * * 0"
    },
    {
      "path": "/api/cron/refresh-event-lifecycle",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/process-agent-tasks",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/execute-followups",
      "schedule": "0 * * * *"
    }
  ],
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run build"
}

